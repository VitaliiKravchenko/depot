<h2><%= t('.title') %></h2>
 	<table>
		<%= render(cart.line_items)%>
 			
 		<tr class="total_line">
 			<td colspan="2">Загальна сума</td>
 			<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
 		</tr>
 	</table>
<div id="cart_buttons">
<% unless @order %>
	<li><%= button_to t('.checkout'), new_order_path, method: :get, class: "btn btn-large btn-primary"%></li>
<% end %>

<li><%= button_to t('.empty'), cart, method: :delete, data: { confirm: 'Ви впевнені?'}, class: "btn btn-large btn-primary" %><li>
</div>
