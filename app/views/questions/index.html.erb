<p id="notice"><%= notice %></p>

<h1>Задайте своє питання</h1>

<table>
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>Питання</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= question.description %></td>
         <% if session[:user_id] %>
        <td><%= link_to 'Показати', question %></td>
        <td><%= link_to 'Редагувати', edit_question_path(question) %></td>
        <td><%= link_to 'Видалити', question, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нове питання', new_question_path, class: "btn btn-large btn-primary" %>
