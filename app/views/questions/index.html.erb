

<h1><%= t('.legend') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= question.description %></td>
         <% if session[:user_id] %>
        <td><%= link_to 'Показати', question %></td>
        <td><%= link_to 'Редагувати', edit_question_path(question) %></td>
        <td><%= link_to 'Видалити', question, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.submit'), new_question_path, class: "btn btn-large btn-primary" %>
