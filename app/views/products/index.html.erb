<h1>Список продуктів</h1>

<table>
<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image.thumb('200x200').url) %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.title %></dt>
        <dt><%= product.locale %></dt>
        <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Показати', product %><br/>
      <%= link_to 'Редагувати', edit_product_path(product) %><br/>
      <%= link_to 'Видалити', product, method: :delete,
                  data: { confirm: 'Ви впевнені?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Новий продукт', new_product_path %>