<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Назва %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Опис %><br>
    <%= f.text_area :description , rows: 6%>
  </div>
  <div class="field">
    <%= f.label :Посилання_на_зображення_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :Ціна %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :Мова %><br>
    <%= f.select :locale, LANGUAGES %>
  </div>
  <div class="actions">
    <%= f.submit 'Створити продукт' %>
  </div>
<% end %>
