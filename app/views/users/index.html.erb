

<h1>Перелік користувачів</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Показати', user %></td>
        <td><%= link_to 'Редагувати', edit_user_path(user) %></td>
        <td><%= link_to 'Видалити', user, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий користувач', new_user_path %>
